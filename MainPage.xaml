<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zadanie9._02Badowski4c.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout
                HorizontalOptions="Center">
                
                <DatePicker 
                    x:Name="dateStart"
                    />
                <TimePicker 
                    x:Name="timeStart" />

            </HorizontalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center">

                <DatePicker 
                    x:Name="dateEnd" />
                <TimePicker 
                    x:Name="timeEnd" />

            </HorizontalStackLayout>

            <Label 
                x:Name="jsonTu" />

            <Button 
                Clicked="getJson"
                Text="Generuj Json"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
